{
  "Serilog": {
    "MinimumLevel": "Information",
    "Override": {
      "Microsoft.AspNetCore": "Warning"
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3100",
          "outputTemplate": "[{Timestamp:o} {Level:u3}] {TraceId:1} {Message:1j}{NewLine}{Exception}",
          "createLevelLabel": true
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithSpan"
    ]
  },
  "AllowedHosts": "*"
}
