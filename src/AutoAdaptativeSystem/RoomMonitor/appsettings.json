{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": "Information",
    "Override": {
      "Microsoft.AspNetCore": "Warning"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:O} {Level:u3}] {TraceId:1} {Message:1j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "Uri": "http://localhost:3100",
          "outputTemplate": "[{Timestamp:O} {Level:u3}] {TraceId:1} {Message:1j}{NewLine}{Exception}",
          "createLevelLabel": true
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithSpan"
    ]
  },
  "AllowedHosts": "*"
}
